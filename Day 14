import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner in=new Scanner(System.in);
	    String str=in.next();
	    for(int i=0;i<str.length();i++){
	        int count=1;
	        while(i<str.length()-1&&str.charAt(i)==str.charAt(i+1)){
	            count++;
	            i++;
	        }
	        System.out.print(str.charAt(i)+""+count);
	    }
	}
}
